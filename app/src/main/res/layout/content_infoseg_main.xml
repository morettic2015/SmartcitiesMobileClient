<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="40dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.InfosegMain"
    tools:showIn="@layout/app_bar_infoseg_main">

    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" /> -->


    <com.twitter.sdk.android.core.identity.TwitterLoginButton
        android:id="@+id/twitter_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/facebook_login_button_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/button_shape_model"
        android:layout_height="450dp">

        <ImageView
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:id="@+id/imageView4"
            android:background="@drawable/logo"
            android:layout_gravity="center_horizontal"
            android:contentDescription="Citywatch.com.br" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="@string/op_es"
            android:id="@+id/textView9"
            android:layout_gravity="center_horizontal" />

        <Button
            android:textColor="@color/cardview_light_background"
            android:id="@+id/btMapaSplash"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/visualize_as_ocorr_ncias_de_sua_prefer_ncia_no_mapa"

            android:background="@drawable/button_facebook"
            android:drawableLeft="@drawable/ic_map_generico_01"
            android:layout_margin="5dp" />

        <Button
            android:textColor="@color/cardview_light_background"
            android:id="@+id/btConfigSplash"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="@string/configure_suas_preferencias_no_app"
            android:style="@style/Widget.AppCompat.Button.Borderless"
            android:background="@drawable/button_facebook"
            android:drawableLeft="@drawable/ic_config_generico_01"


            android:layout_margin="5dp" />

        <Button
            android:textColor="@color/cardview_light_background"
            android:id="@+id/btPerfilSlash"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:text="@string/informe_seus_dados_e_mantenha_os_atualizados_para_colaborar_com_ocorr_ncias_em_seu_municipio"

            android:background="@drawable/button_facebook"
            android:drawableLeft="@drawable/ic_avatar_novo_01"
            android:layout_margin="5dp" />

        <Button
            android:textColor="@color/cardview_light_background"
            android:id="@+id/btListOcorrencias"
            android:layout_width="match_parent"
            android:layout_height="60dp"

            android:text="@string/visualize_as_ltimas_ocorr_ncias_em_uma_lista_ordenada_por_data"
            android:background="@drawable/button_facebook"
            android:drawableLeft="@mipmap/ic_list_ocorrencias"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Powered by"
            android:id="@+id/textView30"

            android:layout_gravity="center_horizontal"
           />

        <ImageView
            android:id="@+id/bt_morettic"
            android:layout_width="104dp"
            android:layout_height="37dp"

            android:background="@drawable/morettic_icon"
            android:layout_gravity="center_horizontal"

            android:cropToPadding="false"
            android:contentDescription="http://morettic.com.br" />
    </LinearLayout>

    <!--
        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button_facebook"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:visibility="gone"
            android:layout_marginBottom="30dp" />
    -->


</RelativeLayout>
