<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="70dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.InfosegMain"
    tools:showIn="@layout/app_bar_infoseg_main">

    <!-- <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!" /> -->
    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_gravity="left|center_horizontal"
            android:layout_row="0"
            android:background="@drawable/ic_ocorrencia_splash" />

        <TextView
            android:id="@+id/textView9"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:layout_row="0"
            android:text="Registre ocorrências em seu município, na área de saúde, educação, segurança e serviços"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_row="1"
            android:background="@drawable/ic_profile_img" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="234dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:layout_row="1"
            android:text="Informe seus dados e mantenha-os atualizados, para colaborar com ocorrências em seu municipio "
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_row="2"
            android:background="@drawable/ic_map_splash" />

        <TextView
            android:id="@+id/textView11"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="center_vertical"
            android:layout_row="2"
            android:text="Visualize as ocorrências de sua preferência no mapa."
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_column="0"
            android:layout_row="3"
            android:background="@drawable/ic_config_splash" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_gravity="top|left|center_vertical|right"
            android:layout_row="3"
            android:text="Configure suas preferencias no APP"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="104dp"
            android:layout_height="37dp"
            android:layout_column="0"
            android:layout_row="4"
            android:background="@drawable/morettic_icon"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal" />

    </GridLayout>
</RelativeLayout>
