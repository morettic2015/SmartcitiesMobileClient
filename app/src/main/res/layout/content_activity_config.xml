<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingTop="70dp"
    tools:context=".view.ActivityConfig">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|top"
        android:background="#f1f1f1">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="@string/filtros"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_columnSpan="2" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:text="@string/selecione_as_dist_ncias_para_filtrar"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <CheckBox
            android:id="@+id/chkMine"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:checked="true"
            android:text="@string/minhas_ocorr_ncias" />

        <CheckBox
            android:id="@+id/chkCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:checked="false"
            android:text="10 km" />

        <CheckBox
            android:id="@+id/chkEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:checked="false"
            android:text="20km" />

        <CheckBox
            android:id="@+id/chkPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:checked="false"
            android:text="50km" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:text="@string/tipos_de_ocorr_ncias"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:text="@string/informe_os_tipos_de_ocorr_ncia_que_deseja_visualizar"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <CheckBox
            android:id="@+id/chkSaude"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:checked="false"
            android:text="@string/saude" />

        <CheckBox
            android:id="@+id/chkEducacao"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:checked="false"
            android:text="@string/educa_o" />

        <CheckBox
            android:id="@+id/chkTransporte"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:checked="false"
            android:text="@string/transporte" />

        <CheckBox
            android:id="@+id/chkSeguranca"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"
            android:checked="false"
            android:text="@string/seguran_a" />

        <CheckBox
            android:id="@+id/chkMeioAmbiente"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:checked="false"
            android:text="@string/meio_ambiente" />

        <CheckBox
            android:id="@+id/chkPolitica"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="8"
            android:checked="false"
            android:text="@string/politica" />

        <Button
            android:id="@+id/btSalvarPreferencias"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="9"
            android:drawableLeft="@drawable/ic_save_action"
            android:text="@string/salvar"
            android:background="@drawable/button_shape_model"
            android:enabled="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp" />

    </GridLayout>
</RelativeLayout>
