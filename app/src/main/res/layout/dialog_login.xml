<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:background="@drawable/button_shape_model"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="198dp"
        android:layout_height="60dp"

        android:layout_gravity="center_horizontal"

        android:background="@drawable/logo"
        android:contentDescription="Citywatch.com.br" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/login"

        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="@string/criar_uma_conta"

        android:textAppearance="?android:attr/textAppearanceSmall" />

    <Button
        android:drawableLeft="@drawable/icon_gplus"
        android:id="@+id/imageButtonGoogle"
        android:background="@drawable/button_gplus"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="@string/entrar_com_google"
        android:textColor="@color/cardview_light_background"
        />
    <Button
        android:drawableLeft="@drawable/icon_fb"
        android:id="@+id/imageButtonFacebook"
        android:background="@drawable/button_facebook"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/entrar_com_o_facebook"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        />
    <Button
        android:drawableLeft="@drawable/icon_twitter"
        android:id="@+id/imageButtonTwitter"
        android:layout_width="300dp"
        android:layout_height="45dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/button_twitter"
        android:layout_marginTop="10dp"
        android:textColor="@color/cardview_light_background"
        android:text="@string/entrar_com_o_twitter"
        />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="180dp"
        android:layout_height="58dp"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/morettic_icon"
        android:contentDescription="morettic.com.br" />


</LinearLayout>

