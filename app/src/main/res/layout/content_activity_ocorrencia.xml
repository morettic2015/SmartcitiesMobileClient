<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:label="@string/app_name"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingTop="70dp"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".view.ActivityOcorrencia"
    tools:showIn="@layout/activity_ocorrencia">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="#f1f1f1">

        <ImageButton
            android:id="@+id/btCaptureCam"
            android:layout_width="67dp"
            android:layout_height="64dp"
            android:layout_column="0"
            android:layout_gravity="right"
            android:layout_row="0"
            android:background="@drawable/ic_menu_camera" />

        <TextView
            android:id="@+id/LabelTit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="1"
            android:text="Título da ocorrência"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/txtTitulo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2" />

        <TextView
            android:id="@+id/labelDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:text="Descrição"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <EditText
            android:id="@+id/txtDescricao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="4"
            android:ems="10"
            android:inputType="textMultiLine" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="5"
            android:text="Tipo do serviço"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <RadioGroup
            android:id="@+id/idRadioOcorrencia"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6">

            <RadioButton
                android:id="@+id/rSaude"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Saúde" />

            <RadioButton
                android:id="@+id/rEducacao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"


                android:text="Educação" />

            <RadioButton
                android:id="@+id/rTransporte"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"


                android:text="Transporte" />

            <RadioButton
                android:id="@+id/rMeioAmbiente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"


                android:text="Meio ambiente" />

            <RadioButton
                android:id="@+id/rSegurança"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"


                android:text="Segurança" />

            <RadioButton
                android:id="@+id/rPolitica"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="Política"

                />
        </RadioGroup>

        <Button
            android:id="@+id/btEnviarOcorrencia"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:background="@color/colorAccent"
            android:layout_row="7"
            android:drawableLeft="@drawable/ic_menu_send"
            android:text="Denunciar"
            android:layout_gravity="right" />


    </GridLayout>
</RelativeLayout>
