<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="180dp"
    android:layout_margin="15dp"

    android:padding="6dip">

    <android.support.v7.widget.CardView
        android:id="@+id/view2"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:elevation="12dp"
        android:innerRadius="0dp"
        android:shape="ring"
        android:thicknessRatio="1.9"
        app:cardCornerRadius="40dp"
        android:layout_alignTop="@+id/txtDescListView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <ImageView
            android:id="@+id/mcIcon"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignBottom="@+id/txtDescListView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"

            android:contentDescription="TODO"
            android:radius="20dp"
            android:adjustViewBounds="false"
            android:baselineAlignBottom="false" />
    </android.support.v7.widget.CardView>

    <TextView

        android:id="@+id/txtTitListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="false"
        android:gravity="center_vertical"
        android:text="@string/title"
        android:textSize="12sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/view2"
        android:layout_alignStart="@+id/view2" />

    <TextView
        android:id="@+id/txtDescListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:layout_below="@+id/txtTitListView"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="center_vertical"
        android:text="adsfasdf asdfa sdfas dfasdf asdf asdfasdf asdf "
        android:textSize="10sp"
        android:layout_toEndOf="@+id/view2"
        android:layout_margin="5dp" />

    <TextView
        android:id="@+id/txtAuthorListView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignWithParentIfMissing="true"
        android:gravity="center_vertical"
        android:text="Autor"
        android:textSize="10sp"
        android:layout_below="@+id/txtDescListView"
        android:layout_alignLeft="@+id/txtDescListView"
        android:layout_alignStart="@+id/txtDescListView" />

    <TextView
        android:id="@+id/txtDateListView"
        android:layout_width="fill_parent"
        android:layout_height="26dip"
        android:ellipsize="marquee"
        android:singleLine="true"
        android:text="Date"
        android:textSize="10sp"
        android:layout_below="@+id/txtAuthorListView"
        android:layout_alignLeft="@+id/txtAuthorListView"
        android:layout_alignStart="@+id/txtAuthorListView" />

    <ImageView
        android:id="@+id/mcIconType"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:contentDescription="TODO"
        android:src="@mipmap/icon"
        android:layout_alignTop="@+id/txtTitListView"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingBar"
        android:scaleX=".5"
        android:scaleY=".5"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtDateListView" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:id="@+id/btShareList"
        android:background="@drawable/ic_menu_share"
        android:layout_alignTop="@+id/ratingBar"
        android:layout_alignRight="@+id/txtTitListView"
        android:layout_alignEnd="@+id/txtTitListView" />


</RelativeLayout>