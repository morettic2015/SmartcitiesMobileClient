<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingTop="70dp"

    tools:context=".view.ActivityAds">


<!-- view for AdMob Interstitial Ad -->

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:background="#f1f1f1"
        android:weightSum="1">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Patrocínio:"
            android:id="@+id/textView22"
            android:layout_gravity="center_horizontal" />

        <ImageView
            android:layout_width="232dp"
            android:layout_height="80dp"
            android:id="@+id/imageView2"
            android:background="@drawable/morettic_icon"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="15dp"
            android:layout_weight="0.04"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/adsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:text="Ajude-nos a manter o APP"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="15dp"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Se você gosta do serviço, ajude-nos a manter o APP e desenvolver outras aplicações para tornar as cidades inteligentes. Um pequeno gesto estará colaborando para uma sociedade do conhecimento."
            android:id="@+id/textView21"
            android:layout_marginLeft="25dp" />

        <Button
            android:id="@+id/next_level_button"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/ic_attach_money"
            android:background="@drawable/button_shape_model"
            android:text="Ajude nosso desenvolvimento!"
            android:layout_below="@+id/level"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="15dp"

            android:layout_marginBottom="10dp"
            android:layout_weight="0.24"
            android:paddingRight="5dp"
            android:padding="10dp"
            android:layout_marginLeft="10dp" />

    </LinearLayout>
</RelativeLayout>
