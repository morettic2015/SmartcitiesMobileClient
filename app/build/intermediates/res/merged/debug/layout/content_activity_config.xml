<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="0dp"
    android:paddingLeft="10dp"
    android:paddingRight="0dp"
    android:paddingTop="70dp"
    tools:context=".view.ActivityConfig">

    <!-- TODO: Update blank fragment layout -->

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left|top"
        android:background="#f1f1f1">

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="0"
            android:text="Filtros"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="1"
            android:text="Selecione as distâncias para filtrar"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <CheckBox
            android:id="@+id/chkMine"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="2"
            android:checked="true"
            android:text="Minhas ocorrências" />

        <CheckBox
            android:id="@+id/chkCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="2"
            android:checked="false"
            android:text="10 km" />

        <CheckBox
            android:id="@+id/chkEstado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="3"
            android:checked="false"
            android:text="20km" />

        <CheckBox
            android:id="@+id/chkPais"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="3"
            android:checked="false"
            android:text="50km" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="4"
            android:text="Tipos de ocorrências"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <TextView
            android:id="@+id/textView16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="5"
            android:text="Informe os tipos de ocorrência que deseja visualizar"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <CheckBox
            android:id="@+id/chkSaude"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="6"
            android:checked="false"
            android:text="Saude" />

        <CheckBox
            android:id="@+id/chkEducacao"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="6"
            android:checked="false"
            android:text="Educação" />

        <CheckBox
            android:id="@+id/chkTransporte"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="7"
            android:checked="false"
            android:text="Transporte" />

        <CheckBox
            android:id="@+id/chkSeguranca"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="7"
            android:checked="false"
            android:text="Segurança" />

        <CheckBox
            android:id="@+id/chkMeioAmbiente"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_row="8"
            android:checked="false"
            android:text="Meio Ambiente" />

        <CheckBox
            android:id="@+id/chkPolitica"
            android:layout_width="185dp"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:layout_row="8"
            android:checked="false"
            android:text="Politica" />

        <Button
            android:id="@+id/btSalvarPreferencias"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_row="9"
            android:drawableLeft="@drawable/ic_save_action"
            android:text="Salvar"
            android:background="@color/colorAccent"
            android:layout_gravity="right" />

    </GridLayout>
</RelativeLayout>
