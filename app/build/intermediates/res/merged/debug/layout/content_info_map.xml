<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:label="@string/app_name"
    android:background="@drawable/main_shape_model"
    android:orientation="vertical"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:id="@+id/imageViewOcorrencia"
            android:layout_row="0"
            android:background="@color/colorPrimaryDark"
            android:src="@drawable/ic_cast_dark"
            android:layout_column="0"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.13"
            android:layout_columnSpan="2"
            android:padding="0dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Titulo"
            android:id="@+id/txtTitMapOcorrencia"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:padding="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DescriÃ§ao"
            android:id="@+id/txtDescricaoMapOcorrencia"
            android:layout_weight="0.13"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="data"
            android:id="@+id/txtDataMapOcorrencia"
            android:layout_gravity="left|center_horizontal"
            android:layout_row="3"
            android:layout_column="0"
            android:padding="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tipo"
            android:id="@+id/txtTipoMapOcorrencia"
            android:layout_gravity="left|center_horizontal"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:padding="5dp" />

        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageViewAvatarMap"
            android:layout_row="4"
            android:src="@drawable/ic_profile_img"
            android:background="@color/colorPrimaryDark"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="0.11"
            android:layout_column="0"
            android:padding="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="autor"
            android:id="@+id/txtAutorMapOcorrencia"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.13"
            android:layout_row="4"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:padding="5dp" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/ratingBarOcorrencia"
            android:numStars="5"
            android:rating="2.5"
            android:stepSize="0.5"
            android:layout_row="5"
            android:layout_column="0"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal" />

        <Button
            android:id="@+id/btCompartilharOcorrencia"
            android:layout_width="142dp"
            android:layout_height="30dp"
            android:layout_column="0"
            android:background="@drawable/button_shape_model"
            android:layout_row="7"
            android:drawableLeft="@drawable/ic_menu_share"
            android:text="@string/compartilhe"
            android:layout_marginRight="5dp"
            android:layout_columnSpan="2"
            android:layout_gravity="center_horizontal" />

    </GridLayout>

</LinearLayout>
