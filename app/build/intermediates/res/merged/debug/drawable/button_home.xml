<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="#f1f1f1" />
            <stroke
                android:width="1dp"
                android:color="#3da849" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
    <item >
        <shape>
            <gradient
                android:startColor="#3da849"
                android:endColor="#3da849"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#ffffff" />
            <corners
                android:radius="1dp" />

        </shape>
    </item>
</selector>