<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="350dp"
    android:layout_height="match_parent"
    android:label="@string/app_name"
    android:orientation="vertical"
    android:weightSum="1">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.CardView
            android:id="@+id/view2"
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_column="0"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp"
            android:layout_above="@+id/txtAuthorListView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_row="0"
            android:layout_columnSpan="3">
        <ImageView
            android:layout_width="250dp"
            android:layout_height="180dp"
            android:id="@+id/imageViewOcorrencia"
            android:layout_row="0"
            android:src="@drawable/ic_cast_dark"
            android:layout_weight="0.13"
            android:layout_columnSpan="2"
            android:padding="0dp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Titulo"
            android:id="@+id/txtTitMapOcorrencia"
            android:layout_gravity="center_horizontal"
            android:layout_weight="0.02"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:padding="5dp"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="DescriÃ§ao"
            android:id="@+id/txtDescricaoMapOcorrencia"
            android:layout_weight="0.13"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_columnSpan="3"
            android:padding="5dp"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="data"
            android:id="@+id/txtDataMapOcorrencia"
            android:layout_gravity="left|center_horizontal"
            android:layout_row="3"
            android:layout_column="0"
            android:padding="5dp"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="tipo"
            android:id="@+id/txtTipoMapOcorrencia"
            android:layout_gravity="left|center_horizontal"
            android:layout_row="3"
            android:layout_column="1"
            android:layout_columnSpan="2"
            android:padding="5dp"
            android:layout_margin="5dp" />

        <TextView
            android:layout_width="233dp"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:id="@+id/txtAutorMapOcorrencia"
            android:layout_gravity="left|center_vertical"
            android:layout_weight="0.13"
            android:layout_row="4"
            android:layout_column="0"
            android:padding="5dp"
            android:layout_margin="5dp" />
        <android.support.v7.widget.CardView
            android:id="@+id/view3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:elevation="12dp"
            android:innerRadius="0dp"
            android:shape="ring"
            android:layout_column="1"
            android:thicknessRatio="1.9"
            app:cardCornerRadius="40dp"
            android:layout_above="@+id/txtAuthorListView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_margin="5dp"
            android:layout_gravity="top|center_horizontal"
            android:layout_row="4"
            android:layout_columnSpan="2">
        <ImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageViewAvatarMap"
            android:layout_row="4"
            android:src="@drawable/ic_profile_img"
            android:layout_gravity="left|center_horizontal"
            android:layout_weight="0.11"
            android:layout_column="1"
            android:padding="5dp" />
        </android.support.v7.widget.CardView>

    </GridLayout>

</LinearLayout>
