<?xml version="1.0" encoding="utf-8"?>
<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/modal_shape_model"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_margin="20dp"
        android:id="@+id/imageView6"
        android:layout_row="0"
        android:background="@mipmap/ic_city_watch"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/registrar"
        android:id="@+id/textView20"
        android:layout_row="1"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/informe_seu_email_senha_e_confirma_o_de_senha_para_registrar_se"
        android:id="@+id/textViewMensagemCad"
        android:layout_row="2"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/email"
        android:id="@+id/textView18"
        android:layout_row="3"
        android:layout_column="0" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textEmailAddress"
        android:id="@+id/txtEmailSocial"
        android:layout_row="4"
        android:layout_column="0" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/senha"
        android:id="@+id/textView26"
        android:layout_row="5"
        android:layout_column="0" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/txtPassRR"
        android:layout_row="6"
        android:layout_column="0" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="@string/confirmacao_de_senha"
        android:id="@+id/textView25"
        android:layout_row="7"
        android:layout_column="0" />

    <EditText
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/txtPassRT"
        android:layout_row="8"
        android:layout_column="0" />

    <Button
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:text="@string/registrar_se"
        android:id="@+id/btRegisterSocial"
        android:drawableLeft="@drawable/ic_seguranca"
        android:layout_row="9"
        android:bottomRightRadius="8dp"
        android:bottomLeftRadius="8dp"
        android:topRightRadius="8dp"
        android:topLeftRadius="8dp"
        android:background="@drawable/button_shape_model"
        android:layout_column="0"
        android:layout_gravity="center_horizontal" />
</GridLayout>